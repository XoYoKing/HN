<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mediareport"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_15dp"
        android:layout_marginLeft="@dimen/common_12dp"
        android:layout_marginRight="@dimen/common_12dp"
        android:layout_marginTop="@dimen/common_15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_itemId"
            android:layout_width="130dp"
            android:src="@drawable/news_img"
            android:layout_height="@dimen/common_90dp"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_90dp"
            android:layout_marginLeft="@dimen/common_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者作者作者作者"
                android:textColor="@color/black"
                android:textSize="@dimen/common_14sp"/>

            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_press"
                android:layout_marginTop="@dimen/common_10dp"
                android:lines="3"
                android:text="新闻标题新闻标题新闻标题新闻标题新闻标题新闻标题新闻标题新闻标题新闻标题新闻标题"
                android:textColor="@color/black"
                android:textSize="@dimen/common_13sp" />

            <TextView
                android:id="@+id/news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="2016-2-12"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="@dimen/common_13sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>