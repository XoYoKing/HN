<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="@dimen/common_15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料类别："
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/common_15sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bai lu zuo "
            android:textColor="@color/text_color"
            android:textSize="@dimen/common_15sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_marginTop="@dimen/common_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资料编号："
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/common_15sp" />

            <TextView
                android:id="@+id/tv_numberNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22226"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_15sp" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="船舶名称："
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/common_15sp" />

        <TextView
            android:id="@+id/tv_ship_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bai lu zuo "
            android:textColor="@color/text_color"
            android:textSize="@dimen/common_15sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/common_5dp"
            android:layout_marginTop="@dimen/common_5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资料名称："
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/common_15sp" />

            <TextView
                android:id="@+id/tv_chinese_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bai lu zuo "
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_15sp" />

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出版日期："
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/common_15sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-2-12"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单价："
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/common_15sp" />

            <TextView
                android:id="@+id/tv_univalent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_15sp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/common_5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领用数量："
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/common_15sp" />

            <TextView
                android:id="@+id/tv_use_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退货数量："
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/common_15sp" />

            <TextView
                android:id="@+id/tv_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_15sp" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
