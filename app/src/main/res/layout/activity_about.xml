<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/athens_gray"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <include layout="@layout/public_title"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background"
            android:padding="@dimen/common_15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_hanjue"
                    android:layout_width="@dimen/common_80dp"
                    android:layout_height="@dimen/common_80dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/tv_hn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/common_5dp"
                    android:text="海宁海图"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_versionName"
                android:text="当前版本："
                android:textColor="@color/gray"
                android:textSize="@dimen/common_18sp" />

            <TextView
                android:id="@+id/tv_versionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="V1.0.0"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_20sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_10dp"
            android:background="@drawable/layout_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_44dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_20dp"
                android:gravity="center_vertical"
                android:text="账号"
                android:textSize="@dimen/common_14sp" />

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_15dp"
                android:gravity="center_vertical"
                android:text="1111"
                android:textSize="@dimen/common_14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line"
            android:background="@drawable/layout_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_44dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_20dp"
                android:gravity="center_vertical"
                android:text="邮箱"
                android:textSize="@dimen/common_14sp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_15dp"
                android:gravity="center_vertical"
                android:text="1111"
                android:textSize="@dimen/common_14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line"
            android:background="@drawable/layout_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_44dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_20dp"
                android:gravity="center_vertical"
                android:text="电话"
                android:textSize="@dimen/common_14sp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_15dp"
                android:gravity="center_vertical"
                android:text="1111"
                android:textSize="@dimen/common_14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line"
            android:background="@drawable/layout_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_44dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_20dp"
                android:gravity="center_vertical"
                android:text="用户类型"
                android:textSize="@dimen/common_14sp" />

            <TextView
                android:id="@+id/tv_userType"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_15dp"
                android:gravity="center_vertical"
                android:text="1111"
                android:textSize="@dimen/common_14sp" />
        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_hanjue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/common_10dp"
        android:layout_marginBottom="@dimen/common_50dp"
        android:text="Copyright © 2018 - haining.All Rights Reserved"
        android:textColor="@color/gray"
        android:textSize="@dimen/common_12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_hanjue"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/common_10dp"
        android:text="海宁公司 版权所有"
        android:textColor="@color/gray"
        android:textSize="@dimen/common_14sp" />

</RelativeLayout>