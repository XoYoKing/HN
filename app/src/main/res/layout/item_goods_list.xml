<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_110dp"
        android:background="@drawable/layout_background">

        <ImageView
            android:id="@+id/goods_icon"
            android:layout_width="@dimen/common_110dp"
            android:layout_height="@dimen/common_110dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tu"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_marginRight="@dimen/common_12dp"
            android:layout_marginTop="@dimen/common_8dp"
            android:layout_toRightOf="@+id/goods_icon"
            android:maxLines="3"
            android:text="abc高级不沾abc高级不沾大容量汤锅abc高级不沾大容量汤锅c高级不沾大容量汤锅"
            android:textColor="@color/line_color"
            android:textSize="@dimen/common_14sp" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_marginTop="@dimen/common_15dp"
            android:layout_marginBottom="@dimen/common_10dp"
            android:layout_toRightOf="@+id/goods_icon"
            android:visibility="visible">
            <TextView
                android:id="@+id/shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_12dp"
                android:text="￥ 99.99"
                android:textColor="@color/red"
                android:textSize="@dimen/common_14sp" />

            <TextView
                android:layout_below="@+id/shop_price"
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_3dp"
                android:text="2199条评价"
                android:textColor="@color/line_color"
                android:textSize="@dimen/common_14sp" />

        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/common_110dp"
        android:layout_height="@dimen/common_line"
        android:background="@color/line_color"/>
</LinearLayout>
