<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/img_select"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="@dimen/common_5dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/seletor_shop_cart" />

                <TextView
                    android:id="@+id/tv_discrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/img_content"
                    android:text="姿兰气垫cc霜"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_14sp" />

                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_discrip"
                    android:layout_below="@+id/tv_discrip"
                    android:layout_marginTop="@dimen/common_2dp"
                    android:text="专柜联保售后"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_12sp" />

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_service"
                    android:layout_below="@+id/tv_service"
                    android:layout_marginTop="@dimen/common_2dp"
                    android:text="颜色: 白色  尺码: 33"
                    android:textSize="@dimen/common_12sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_color"
                    android:layout_below="@+id/tv_color"
                    android:layout_marginTop="4dp"
                    android:text="99.00"
                    android:textColor="@color/red"
                    android:textSize="@dimen/common_12sp" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_price"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_price"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_12sp" />

                <ImageView
                    android:id="@+id/img_content"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/goods"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/img_select" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>