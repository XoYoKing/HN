<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_smoke"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">
    <include layout="@layout/public_title"></include>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/common_10dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:stretchColumns="0,1">

        <TableRow
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10dp"
                android:text="船舶名称"
                android:layout_marginLeft="@dimen/common_10dp"
                android:textSize="@dimen/common_16sp"/>

            <TextView
                android:id="@+id/tv_ship_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="hai ning hao"
                android:padding="@dimen/common_10dp"
                android:textSize="@dimen/common_16sp"/>

        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"
            android:background="@color/white_smoke"/>
        <TableRow
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10dp"
                android:text="船舶编号"
                android:layout_marginLeft="@dimen/common_10dp"
                android:textSize="@dimen/common_16sp"/>
            <TextView
                android:id="@+id/tv_ship_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="qaz123456"
                android:padding="@dimen/common_10dp"
                android:textSize="@dimen/common_16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_maxamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/common_10dp"
                    android:paddingTop="@dimen/common_10dp"
                    android:text="" android:textColor="@color/black"
                    android:textSize="@dimen/common_16sp"/>

            </LinearLayout>

        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"
            android:background="@color/white_smoke"/>
        <TableRow
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/common_10dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10dp"
                android:text="船舶类型"
                android:textSize="@dimen/common_16sp"/>
            <TextView
                android:id="@+id/tv_ship_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="1"
                android:padding="@dimen/common_10dp"
                android:textSize="@dimen/common_16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_startamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/common_10dp"
                    android:paddingTop="@dimen/common_10dp"
                    android:text="" android:textColor="@color/black"
                    android:textSize="@dimen/common_16sp"/>

            </LinearLayout>

        </TableRow>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"
            android:background="@color/white_smoke"/>
        <TableRow
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/common_10dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10dp"
                android:text="更新日期"
                android:textSize="@dimen/common_16sp"/>
            <TextView
                android:id="@+id/tv_updatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="2017-11-10"
                android:padding="@dimen/common_10dp"
                android:textSize="@dimen/common_16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/common_10dp"
                    android:paddingTop="@dimen/common_10dp"
                    android:text="" android:textColor="@color/black"
                    android:textSize="@dimen/common_16sp"/>
            </LinearLayout>

        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"
            android:background="@color/white_smoke"/>
        <TableRow
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10dp"
                android:text="更新包大小"
                android:layout_marginLeft="@dimen/common_10dp"
                android:textSize="@dimen/common_16sp"/>

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="30246kb"
                android:padding="@dimen/common_10dp"
                android:textSize="@dimen/common_16sp"/>

        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"
            android:background="@color/white_smoke"/>
        <TableRow
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10dp"
                android:text="下载更新包"
                android:layout_marginLeft="@dimen/common_10dp"
                android:textSize="@dimen/common_16sp"/>

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="下载"
                android:padding="@dimen/common_10dp"
                android:textSize="@dimen/common_16sp"/>

        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"
            android:background="@color/white_smoke"/>
        <TableRow
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10dp"
                android:text="船舶同步状态"
                android:layout_marginLeft="@dimen/common_10dp"
                android:textSize="@dimen/common_16sp"/>

            <TextView
                android:id="@+id/tv_shipstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="已同步"
                android:padding="@dimen/common_10dp"
                android:textSize="@dimen/common_16sp"/>

        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"
            android:background="@color/white_smoke"/>
    </TableLayout>
</LinearLayout>
