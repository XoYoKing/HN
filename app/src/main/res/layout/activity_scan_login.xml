<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_logins"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/public_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/common_15sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_15dp"
            android:layout_marginRight="@dimen/common_15dp"
            android:layout_gravity="center"
            android:text="扫描结果"/>

        <Button
            android:layout_marginTop="@dimen/common_15dp"
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_15dp"
            android:layout_marginRight="@dimen/common_15dp"
            android:background="@drawable/shape_btn_background_blue"
            android:textColor="@color/white"
            android:text="允许登录"/>
        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/common_15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_15dp"
            android:background="@drawable/shape_btn_background_yellow"
            android:layout_marginRight="@dimen/common_15dp"
            android:textColor="@color/white"
            android:text="取消"/>
    </LinearLayout>

</RelativeLayout>