<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/btn"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/goods"
        android:layout_marginBottom="@dimen/common_10dp"
        android:layout_marginRight="@dimen/common_12dp"
        android:layout_marginTop="@dimen/common_10dp"
        android:background="@drawable/layout_background"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/all_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共2件商品"
            android:textColor="@color/black"
            android:textSize="@dimen/common_12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_5dp"
            android:text="实付款："
            android:textColor="@color/black"
            android:textSize="@dimen/common_12sp" />
        <TextView
            android:id="@+id/all_goods_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_5dp"
            android:text="￥198"
            android:textColor="@color/black"
            android:textSize="@dimen/common_18sp" />
        <TextView
            android:id="@+id/tv_freight"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_5dp"
            android:text="（含运费￥0.00）"
            android:textColor="@color/black"
            android:textSize="@dimen/common_12sp" />

    </LinearLayout>

    <include layout="@layout/include_view_line"/>

    <LinearLayout
        android:id="@+id/btn_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_10dp"
        android:layout_marginTop="@dimen/common_10dp"
        android:layout_marginRight="@dimen/common_15dp"
        android:background="@drawable/layout_background"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lock_logistics"
            android:layout_width="65dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_order_manager_btn"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="@color/black"
            android:textSize="@dimen/common_12sp" />

        <Button
            android:visibility="visible"
            android:id="@+id/pay"
            android:layout_width="65dp"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/common_15dp"
            android:background="@drawable/shape_order_manager_btn"
            android:gravity="center"
            android:text="付款"
            android:textColor="@color/black"
            android:textSize="@dimen/common_12sp" />

    </LinearLayout>
</LinearLayout>
