<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/shape_dialog_bg_radius"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_15dp"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/common_15sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dialog_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_10dp"
            android:layout_marginLeft="@dimen/common_35dp"
            android:layout_marginRight="@dimen/common_35dp"
            android:layout_marginTop="@dimen/common_10dp"
            android:gravity="center_horizontal"
            android:minHeight="@dimen/common_70dp"
            android:textColor="@color/black"
            android:textSize="@dimen/common_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_20dp"
            android:layout_marginLeft="@dimen/common_40dp"
            android:layout_marginRight="@dimen/common_40dp"
            android:layout_marginTop="@dimen/common_20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/dialog_bt_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_background_yellow"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/common_13sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/dialog_bt_confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_40dp"
                android:layout_marginLeft="@dimen/common_40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_background_blue"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/common_13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>