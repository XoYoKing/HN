<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/layout_background"
        android:orientation="vertical">
        <include layout="@layout/include_view_line"/>

        <LinearLayout
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/common_15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goods_receipt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_12dp"
                android:layout_toLeftOf="@+id/goods_receipt_phone"
                android:singleLine="true"
                android:text="张三"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/common_16sp" />

            <TextView
                android:id="@+id/goods_receipt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_40dp"
                android:layout_marginRight="@dimen/common_25dp"
                android:singleLine="true"
                android:text="1812255252"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/common_16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/people"
            android:layout_marginBottom="@dimen/common_12dp"
            android:layout_marginTop="@dimen/common_10dp">


            <TextView
                android:layout_marginLeft="@dimen/common_12dp"
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_20dp"
                android:text="上海市开机时间哈哈哈大客上海市开机时间哈哈哈大客"
                android:textColor="@color/black"
                android:textSize="@dimen/common_12sp" />

        </RelativeLayout>

        <include layout="@layout/include_view_line"/>

        <RelativeLayout
            android:id="@+id/relative_default"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_44dp"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/select_default_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_12dp"
                android:button="@drawable/selector_default_shopping_address"
                android:padding="@dimen/common_5dp"
                android:text=" 默认地址"
                android:textColor="@drawable/selector_goods_list_screen_tv_color"
                android:textSize="@dimen/common_12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/common_15dp"
                    android:layout_toLeftOf="@+id/select_address"
                    android:padding="@dimen/common_5dp"
                    android:text="编辑"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/common_12sp" />

                <View
                    android:layout_width="@dimen/common_1dp"
                    android:layout_height="@dimen/common_15dp"
                    android:background="@color/line_color"></View>

                <TextView
                    android:id="@+id/delete_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/common_15dp"
                    android:layout_toLeftOf="@+id/select_address"
                    android:padding="@dimen/common_5dp"
                    android:text="删除"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/common_12sp" />
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/include_view_line"/>


    </LinearLayout>

</LinearLayout>
