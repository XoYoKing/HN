<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/tabLinear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40dp"
            android:background="@drawable/layout_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_back"
                android:layout_marginLeft="@dimen/common_10dp"
                android:padding="@dimen/common_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="@dimen/common_200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextColor="@color/black" />

        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_above="@+id/ll_bottom"
        android:background="@color/line_color"></View>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_shop_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/goods_detail_shop_cart" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="购物车"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/common_12sp" />

            </LinearLayout>
            <TextView
                android:layout_width="@dimen/common_30dp"
                android:layout_marginLeft="@dimen/common_10dp"
                android:layout_height="wrap_content"
                android:background="@color/grey_dde1e7"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_18sp" />

            <TextView
                android:layout_width="@dimen/common_40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_14sp" />

            <TextView
                android:layout_width="@dimen/common_30dp"
                android:layout_height="wrap_content"
                android:background="@color/grey_dde1e7"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/add_shopping_cart"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_44dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_yellow"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="@dimen/common_15sp" />

        <Button
            android:id="@+id/confirm_bid"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_44dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_blue"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/common_15sp" />
    </LinearLayout>

</RelativeLayout>
