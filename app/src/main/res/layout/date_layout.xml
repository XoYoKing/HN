<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_5dp"
    android:background="@drawable/layout_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="@dimen/common_15sp"
        android:layout_marginTop="@dimen/common_5dp"
        android:layout_marginLeft="@dimen/common_15dp"
        android:text="出版日期：" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/common_10dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_10dp"
        android:layout_marginLeft="@dimen/common_15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/startdate"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_color"
            android:layout_height="@dimen/common_28dp"
            android:background="@drawable/shape_rect_gray_radius_4"
            android:textSize="@dimen/common_14sp"
            android:text="2017-9-5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textColor="@color/text_color"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/common_14sp"
            android:layout_marginRight="@dimen/common_5dp"
            android:layout_marginLeft="@dimen/common_5dp"
            android:gravity="center" />
        <TextView
            android:id="@+id/enddate"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/common_10dp"
            android:layout_weight="1"
            android:layout_height="@dimen/common_28dp"
            android:background="@drawable/shape_rect_gray_radius_4"
            android:textSize="@dimen/common_14sp"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:layout_alignParentRight="true"
            android:text="2017-9-5" />
    </LinearLayout>

</LinearLayout>
