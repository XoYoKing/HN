<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_10dp"
    android:paddingLeft="15dp"
    android:orientation="horizontal">

    <TextView
        android:text="时间："
        android:layout_marginLeft="@dimen/common_5dp"
        android:layout_width="wrap_content"
        android:textSize="@dimen/common_16sp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/ed_year"
        android:layout_marginLeft="@dimen/common_10dp"
        android:layout_width="50dp"
        android:digits="1234567890"
        android:maxLength="4"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@color/white"
        />
    <TextView
        android:text="年"
        android:layout_marginLeft="@dimen/common_5dp"
        android:layout_width="wrap_content"
        android:textSize="@dimen/common_16sp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_week"
        android:layout_marginLeft="@dimen/common_5dp"
        android:layout_width="30sp"
        android:inputType="number"
        android:digits="1234567890"
        android:maxLength="2"
        android:background="@color/white"
        android:layout_height="wrap_content" />
    <TextView
        android:text="周"
        android:textSize="@dimen/common_16sp"
        android:layout_marginLeft="@dimen/common_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
