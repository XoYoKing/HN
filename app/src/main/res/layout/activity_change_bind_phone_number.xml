<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white_smoke" android:orientation="vertical"

    >

    <include layout="@layout/public_title"></include>

    <LinearLayout

        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/white_smoke" android:orientation="vertical">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_10dp"
            android:background="@color/white"
            android:padding="@dimen/common_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10dp"
                android:text="已绑定的邮箱" android:textColor="@color/black"
                android:textSize="@dimen/common_18sp"/>

            <TextView android:id="@+id/tv_bound_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/common_10dp"
                android:textSize="@dimen/common_18sp"/>
        </RelativeLayout>


        <EditText
            android:id="@+id/et_please_input_pay_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/change_password_original"
            android:drawablePadding="@dimen/common_10dp"
            android:hint="请输入登陆密码"
            android:padding="@dimen/common_10dp"
            android:textColorHint="@color/light_gray"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"

            android:background="@color/light_gray"/>


        <EditText
            android:id="@+id/et_please_input_pay_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/change_password_original"
            android:drawablePadding="@dimen/common_10dp"
            android:hint="请输入手机号"
            android:padding="@dimen/common_10dp"
            android:textColorHint="@color/light_gray"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"

            android:background="@color/light_gray"/>
            <EditText android:id="@+id/et_please_input_new_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="@dimen/common_10dp"
                android:hint="请输入新的邮箱"
                android:padding="@dimen/common_10dp"
                android:textColorHint="@color/light_gray"/>


        <TextView android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"

            android:background="@color/light_gray"/>
        <RelativeLayout android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <EditText android:id="@+id/et_please_input_validate_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_1dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/mobile_phone_validate_code"
                android:drawablePadding="@dimen/common_10dp"
                android:hint="请输入邮箱验证码"
                android:maxLength="6"
                android:padding="@dimen/common_10dp"
                android:singleLine="true"
                android:textColorHint="@color/light_gray"/>

            <com.example.admin.hn.widget.TimeButton
                android:id="@+id/tb_send_validate_code"
                android:layout_width="@dimen/common_90dp"
                android:layout_height="@dimen/common_40dp" android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@color/iron"
                android:clickable="true"
                android:padding="@dimen/common_10dp" android:text="发送验证码"
                android:textColor="@color/white"/>
        </RelativeLayout>


    </LinearLayout>

    <TextView android:id="@+id/tv_confirm_change_bind_phone"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_30dp"
        android:layout_marginRight="@dimen/common_30dp"
        android:layout_marginTop="@dimen/common_30dp"
        android:background="@color/yukon_gold" android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="@dimen/common_15dp"
        android:text="确认更改" android:textColor="@color/white"/>
</LinearLayout>
