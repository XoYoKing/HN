<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <include layout="@layout/include_shop_order_manager_top"/>
    <LinearLayout
        android:id="@+id/ll_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/common_15dp"
            android:layout_marginTop="@dimen/common_10dp"
            android:layout_marginBottom="@dimen/common_10dp"
            android:src="@drawable/load_fail" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_marginRight="@dimen/common_12dp"
            android:layout_marginTop="@dimen/common_10dp"
            android:layout_marginBottom="@dimen/common_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:lines="5"
                android:textSize="@dimen/common_14sp" />

            <TextView
                android:id="@+id/tv_usp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10dp"
                android:text="专柜联保售后 任意门店清洗"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/common_12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/common_40dp"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/single_goods_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="￥99.00"
                    android:textColor="@color/red"
                    android:textSize="@dimen/common_12sp" />

                <TextView
                    android:id="@+id/goods_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="x 2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_12sp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_shop_order_manager_bottom"/>

</LinearLayout>
