<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/common_1dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_15dp"
            android:textSize="@dimen/common_14sp"
            android:textColor="@color/text_color"
            android:layout_gravity="center_vertical"
            android:text="资料编号：" />

        <com.example.admin.hn.widget.EditTextWithDel
            android:id="@+id/et_dataNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40dp"
            android:textSize="@dimen/common_14sp"
            android:hint="请输入资料编号"
            android:background="@drawable/layout_background"
            android:textColorHint="@color/text_color_hint"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_marginRight="@dimen/common_20dp"></com.example.admin.hn.widget.EditTextWithDel>

    </LinearLayout>

    <include layout="@layout/include_view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/common_1dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_15dp"
            android:textSize="@dimen/common_14sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color"
            android:text="资料名称：" />

        <com.example.admin.hn.widget.EditTextWithDel
            android:id="@+id/et_chineseName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40dp"
            android:textSize="@dimen/common_14sp"
            android:hint="请输入资料名称"
            android:background="@drawable/layout_background"
            android:textColorHint="@color/text_color_hint"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_marginRight="@dimen/common_20dp"></com.example.admin.hn.widget.EditTextWithDel>

    </LinearLayout>
    <include layout="@layout/include_view_line"/>
</LinearLayout>
