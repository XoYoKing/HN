<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_background"
        android:paddingTop="@dimen/common_10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img"
            android:layout_marginLeft="12dp"
            android:layout_width="@dimen/common_25dp"
            android:layout_height="@dimen/common_25dp"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/tv_label"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_toRightOf="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_15dp"
            android:layout_marginTop="15dp"
            android:text="热门推荐"
            android:textColor="@color/black"
            android:textSize="@dimen/common_15sp" />
        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_15dp"
            android:layout_marginBottom="@dimen/common_15dp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:text="更多>"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/common_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:background="@color/line_color"
        android:visibility="gone"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</LinearLayout>