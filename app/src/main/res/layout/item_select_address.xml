<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/layout_background"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/select_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/select_address"
            android:layout_toLeftOf="@+id/img_edit"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/common_5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/common_15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/goods_receipt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/common_16sp" />

                <TextView
                    android:layout_marginLeft="@dimen/common_40dp"
                    android:id="@+id/goods_receipt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="1812255252"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_16sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/people"
                android:layout_marginBottom="@dimen/common_12dp"
                android:layout_marginTop="@dimen/common_10dp">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_10dp"
                    android:text="上海市开机时间哈哈哈大客上海市开机时间哈哈哈大客"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_14sp" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/select_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_15dp"
            android:src="@drawable/sreach_check"
            android:padding="@dimen/common_5dp" />

        <ImageView
            android:layout_marginRight="@dimen/common_15dp"
            android:id="@+id/img_edit"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check_address_list_edit"/>

    </RelativeLayout>
    <include layout="@layout/include_view_line"/>

</LinearLayout>
